<h3><%= current_user.email %></h3>
<h4>Status: <%= current_user.activated ? "Activated" : 'Not Activated' %></h4>
<% unless current_user.activated %>
  <div class="alert alert-info" role="alert">Please check your email to activate your account</div>
  <%= button_to "Resend Email", resend_user_url(current_user), class: 'btn btn-info' %>
<% end %>

<hr>

<%= link_to "Delete Account", user_destroy_url, method: "delete", class: "btn btn-danger" %>
