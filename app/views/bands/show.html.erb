<p>
  Name: <%= @band.name %>
</p>


<%= link_to "Edit", edit_band_url(@band), class: "btn btn-info" %>
<%= link_to "Destroy", @band, method: "delete", class: "btn btn-danger" %>
<%= link_to "Bands", bands_url %>
<h3>Albums</h3>
<table class="table">
  <thead>
    <th>Name</th>
  </thead>
  <tbody>
    <% @band.albums.each do |album| %>
      <tr>
        <td><%= link_to album.name, album %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Album", new_album_url %>
