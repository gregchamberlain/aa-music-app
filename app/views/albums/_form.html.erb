<%= quick_form action: "New Album", url: url, method: method do %>
  <div class="form-group">
    <label>Band</label>
    <select name="album[band_id]" class="form-control">
      <% bands.each do |band| %>
        <option value="<%= band.id %>" <%= band == album.band ? "selected" : "" %>>
          <%= band.name %>
        </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="album[name]" value="<%= album.name %>" class="form-control">
  </div>
  <div class="form-group">
    <label>Kind</label>
    <div class="radio">
      <label>
        <input type="radio" name="album[kind]" value="studio" <%= album.kind.nil? || album.kind == "studio" ? "checked" : "" %>>
        Studio
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="album[kind]" value="live" <%= album.kind == "live" ? "checked" : "" %>>
        Live
      </label>
    </div>
  </div>
<% end %>
