<p>
  Band <%= link_to @album.band.name, @album.band %>
</p>
<p>
  Name: <%= @album.name %>
</p>
</p>
<p>
  Kind:
  <%= @album.kind %>
</p>

<%= link_to "Edit", edit_album_url(@album), class: "btn btn-info" %>
<%= link_to "Destroy", @album, method: "delete", class: "btn btn-danger" %>

<h3>Tracks</h3>
<table class="table">
  <thead>
    <th>Name</th>
  </thead>
  <tbody>
    <% @album.tracks.each do |track| %>
      <tr>
        <td><%= link_to track.name, track %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Track", new_track_url %>
